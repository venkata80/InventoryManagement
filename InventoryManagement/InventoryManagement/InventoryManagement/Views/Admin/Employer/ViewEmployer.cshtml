@model IEnumerable<InventoryManagement.Models.BaseEmployerDTO>

@{
    ViewBag.Title = "ViewEmployer";
}

<h2>Employers</h2>
<div class="padding-md">
    <div class="main-header clearfix">
        <div class="panel panel-default table-responsive">
            <div class="panel-heading">
                <span class="label label-info ">
                    <span class="glyphicon glyphicon-plus-sign"></span>
                    @Html.ActionLink("Create New", "CreateEmployer", "Admin")
                </span>
                <span class="label label-info pull-right">  @Model.Count() Employers</span>
            </div>
        </div>
        <div class="padding-md clearfix">
            <table class="table table-striped" id="dataTable">
                <tr>                  
                    <th>Full Name </th>
                    <th>Date Of Birth</th>
                    <th>Gender</th>
                    <th>Residential Phone</th>
                    <th>Cell Phone</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Zip Code</th>
                    <th>Joining Date</th>
                    <th>Relieved Date</th>
                    <th>Is Active</th>                    
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>                      
                        <td>
                            @Html.DisplayFor(modelItem => item.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dateofbirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ResPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CellPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Zipcode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JoinDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Relieved)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Isactive)
                        </td>                       
                        <td>
                            @Html.ActionLink("Edit", "EditEmployer", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteEmployer", new { id = item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })
                        </td>
                    </tr>

                }

            </table>
        </div>
    </div>
</div>