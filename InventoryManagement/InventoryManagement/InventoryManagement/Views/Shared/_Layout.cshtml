<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .loader {
            z-index: 9001;
            position: relative;
            top: calc(50% - 16px);
            left: calc(50% - 16px);
            height: 50px !important;
            width: 50px !important;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "UserLogin", "Login", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Employer<span class="carte"></span></a>
                        <ul class="dropdown-menu" role="menu" id="mytab">
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-user"></span>   @Html.ActionLink("Employers", "ViewEmployer", "Admin")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Add Employer", "CreateEmployer", "Admin")</p>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Supplier<span class="carte"></span></a>
                        <ul class="dropdown-menu" role="menu" id="mytab">
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-user"></span>   @Html.ActionLink("Supplier", "ViewSuppliers", "Admin")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Add Supplier", "CreateSupplier", "Admin")</p>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Master Data<span class="carte"></span></a>
                        <ul class="dropdown-menu" role="menu" id="mytab">
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-user"></span>   @Html.ActionLink("Master data items", "MasterTab", "Admin")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Product", "CreateSupplier", "Admin")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Product Type", "CreateSupplier", "Admin")</p>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Master Data<span class="carte"></span></a>
                        <ul class="dropdown-menu" role="menu" id="mytab">
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-user"></span>   @Html.ActionLink("User Creation", "CreateLogin", "Login")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Product", "CreateSupplier", "Admin")</p>
                            </li>
                            <li class="dedi">
                            </li>
                            <li role="presentation">
                                <p><span class="glyphicon glyphicon-plus-sign"></span>   @Html.ActionLink("Product Type", "CreateSupplier", "Admin")</p>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("About", "Index", "Home", new { area = "" }, null)</li>

                    <li>@Html.ActionLink("Contuct", "Index", "Home", new { area = "" }, null)</li>

                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="margin-top: 5px">
        <div>
            <p>
                <span class="glyphicon glyphicon-home"></span>
                @Html.MvcSiteMap().SiteMapPath()
            </p>
        </div>

    </div>

    @*Footer*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div id="loading" class="collapse loader">
            <i class="fa fa-spinner fa-spin fa-3x" style="font-size:48px"></i>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="@Href("~/Scripts/jquery.unobtrusive-ajax.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
